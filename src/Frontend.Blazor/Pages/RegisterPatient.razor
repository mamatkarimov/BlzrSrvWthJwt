@page "/register-patient"
@inject HttpClient Http
@inject NavigationManager Navigation

<h3>Register as Patient</h3>

<EditForm Model="@registerModel" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label>Full Name</label>
        <InputText class="form-control" @bind-Value="registerModel.FullName" />
    </div>

    <div class="form-group">
        <label>Birth Date</label>
        <InputDate class="form-control" @bind-Value="registerModel.BirthDate" />
    </div>

    <div class="form-group">
        <label>Phone</label>
        <InputText class="form-control" @bind-Value="registerModel.Phone" />
    </div>

    <div class="form-group">
        <label>Email (Login)</label>
        <InputText class="form-control" @bind-Value="registerModel.Email" />
    </div>

    <div class="form-group">
        <label>Password</label>
        <InputText type="password" class="form-control" @bind-Value="registerModel.Password" />
    </div>

    <button class="btn btn-primary" type="submit">Register</button>
</EditForm>

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-info mt-2">@message</div>
}

@code {
    private RegisterPatientModel registerModel = new();
    private string? message;

    private async Task HandleValidSubmit()
    {
        var response = await Http.PostAsJsonAsync("api/patient/register", registerModel);

        if (response.IsSuccessStatusCode)
        {
            message = "Registration successful. You can now log in.";
            Navigation.NavigateTo("/login");
        }
        else
        {
            var error = await response.Content.ReadAsStringAsync();
            message = $"Failed: {error}";
        }
    }

    public class RegisterPatientModel
    {
        public string FullName { get; set; } = string.Empty;
        public DateTime BirthDate { get; set; } = DateTime.Today;
        public string Phone { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }
}
